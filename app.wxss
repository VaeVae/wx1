@import './styles/iconfont.wxss';
/* 小程序中不支持  * 通配符 */
 
page,view,text,swiper,swiper-item,image,navigator{
  padding:0;
  margin:0;
  box-sizing: border-box;
}

/* 主题颜色 变量控制
    1.less 中存在变量
    2.原生的css和wxss也是支持变量的
*/
page{
  /* 定义主题色 */
  --themeColor:#eb4450;
  /* 统一字体大小 */
  font-size: 28rpx;
}

/* 默认图片宽度有父元素决定 */

image{
  width:100%
}